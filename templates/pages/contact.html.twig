{% extends 'base.html.twig' %}

{% block title %}Contact{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    {% if form is defined %}
        {{ form(form) }}
    {% endif %}



    {% if contact is defined %}
        <p>Id: {{ contact.id }}</p>
        <p>Nom : {{ contact.name }}</p>
        <p>Prénom : {{ contact.firstName }}</p>
        <p>Email : {{ contact.email }}</p>
        <p>Sujet : {{ contact.sujet }}</p>
        <p>Message : {{ contact.message }}</p>
        <p>Newsletter : {{ contact.newsletter }}</p>
    {% endif %}

    {% if contacts is defined %}
        {% if contacts is not empty %}
            <p>Mes demandes de contacts ({{ contacts|length }})</p>
            {% for contact in contacts %}
                <br><a href="{{ path('contactId', {id: contact.id}) }}">Demande de contact de {{ contact.firstName }} {{ contact.name }}</a>
            {% endfor %}
        {% endif %}
    {% endif %}

    {% if id is defined %}
        <div class="example-wrapper">
            <h1>Bonjour {{ id }}! ✅</h1>
        </div>
    {% endif %}

{% endblock %}
